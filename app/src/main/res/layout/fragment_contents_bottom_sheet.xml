<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AlbumBottomMenuSheet">

    <TextView
        android:id="@+id/tv_contents_edit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/home_bottom_menu_text"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/edit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="#1A222222"
        app:layout_constraintTop_toBottomOf="@id/tv_contents_edit" />


    <TextView
        android:id="@+id/tv_contents_share"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/share"
        android:textColor="@color/home_bottom_menu_text"
        app:layout_constraintTop_toBottomOf="@id/tv_contents_edit"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="#1A222222"
        app:layout_constraintTop_toBottomOf="@id/tv_contents_share" />


    <TextView
        android:id="@+id/tv_contents_delete"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="@string/delete"
        android:textColor="@color/delete_red"
        app:layout_constraintTop_toBottomOf="@id/tv_contents_share"/>

</androidx.constraintlayout.widget.ConstraintLayout>