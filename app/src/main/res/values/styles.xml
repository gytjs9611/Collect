<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/home_status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AlbumFeedThemePink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/album_feed_status_bar_pink</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/layout_round_corner</item>
    </style>




<!--    main activity   -->
    <style name="AppTitle">
        <item name="android:fontFamily">@font/home_title_normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppSubtitle">
        <item name="android:fontFamily">@font/home_subtitle_normal</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="AlbumCardTitle">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="HomeAddText">
<!--        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>-->
        <item name="android:textColor">#66000000</item>
    </style>


    <style name="AlbumTitle">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>