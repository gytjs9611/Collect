<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hschoi.collect">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:requestLegacyExternalStorage="true"
        >
        <activity android:name=".MainActivity"
            android:theme="@style/HomeTheme"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


<!--        팝업 다이얼로그    -->
        <activity android:name=".PopUpDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DialogTheme" />



        <activity android:name=".CreateNewAlbumActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ModifyAlbumActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name=".AlbumFeedActivity"
            android:screenOrientation="portrait">
        </activity>



        <activity android:name=".AddContentsActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name=".AlbumFeedContentsActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".AddContentsCoverActivity"
            android:screenOrientation="portrait">
        </activity>

<!--        setting     -->
        <activity android:name=".SettingActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ModifyAlbumOrderActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>